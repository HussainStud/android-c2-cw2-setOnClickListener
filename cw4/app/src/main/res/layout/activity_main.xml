<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/santa" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoserif_blackitalic"
        android:shadowColor="@color/white"
        android:shadowDx="5"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#7683F8"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/robotoserif_lightitalic"
        android:hint="Type a Number"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edtNumber2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/robotoserif_lightitalic"
        android:hint="Type a Second Number"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/robotoserif_black"
        android:shadowColor="@color/white"
        android:shadowDx="5"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Total"
        android:textAlignment="center"
        android:textColor="#7683F8"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="268dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_calculate_design"
        android:fontFamily="@font/robotoserif_blackitalic"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="1"
        android:shadowRadius="0.5"
        android:text="Calculate!"
        android:textAllCaps="false"
        android:textColor="#FF7683F8"
        android:textSize="19dp" />

</LinearLayout>